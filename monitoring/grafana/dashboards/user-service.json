{
  "id": null,
  "title": "TechWikiPlus - User Service",
  "tags": ["techwikiplus", "user-service"],
  "style": "dark",
  "timezone": "Asia/Seoul",
    "panels": [
      {
        "id": 1,
        "title": "User Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"user-service\"}",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "HTTP Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_total{job=\"user-service\"}[5m])",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"user-service\"}[5m]))",
            "legendFormat": "{{uri}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "JVM Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"user-service\",area=\"heap\"} / jvm_memory_max_bytes{job=\"user-service\",area=\"heap\"} * 100",
            "legendFormat": "Heap Memory %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "hikaricp_connections_active{job=\"user-service\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "hikaricp_connections_max{job=\"user-service\"}",
            "legendFormat": "Max Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 6,
        "title": "JWT Token Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_total{job=\"user-service\",uri=~\"/api/v1/users/(login|refresh)\"}[5m])",
            "legendFormat": "{{uri}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "10s"
}